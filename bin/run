#!/bin/bash -u

# Maybe set /ops/machine as default MACHINE_STORAGE_PATH
export MACHINE_STORAGE_PATH=${MACHINE_STORAGE_PATH:-/ops/machine}

sourcenv () {
  while read envfile; do
    export $(cat $envfile | grep -v "^#" | xargs)
  done < <(find . -name "*.env")
}

source_docker_env() {
  export ERROR=""
  eval $(set_docker_env)
  if [[ "$ERROR" != "" ]]; then
    echo
    echo "$ERROR"
    echo
  fi
}

decrypt() {
  [[ -d "env" ]]     && vault decrypt "env" "secrets"
  [[ -d "machine" ]] && vault decrypt "machine"
}

ascii_welcome() {
  QUIET=${QUIET:-"no"}
  [[ "$QUIET" == "y" ]] && \
  echo '      _
   __| | ___  _ __  ___
  / _` |/ _ \| |_ \/ __|
 | (Â°| < (#) < |_) \__ \
  \__,_|\___/| .__/|___/
             |_|
 -----------------------
 Yo!'
}

main() {
  local arg="${@:-"zsh"}"

  decrypt

  sourcenv

  case "$arg" in
    console)
        if [[ ! -z $GOTTY_CREDENTIAL ]]; then
          echo "---> credential = $GOTTY_CREDENTIAL"
          sed -i \
            -e "s|x:changemeplease|$GOTTY_CREDENTIAL|" \
              /root/.gotty
        fi
        source_docker_env
        exec gotty run zsh
      ;;
    zsh)
      ascii_welcome
      source_docker_env
      exec zsh
      ;;
    *)
      source_docker_env
      exec "$@"
    ;;
  esac
}

main "$@"