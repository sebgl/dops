#!/bin/bash -u

# Maybe set /ops/machine as default MACHINE_STORAGE_PATH
export MACHINE_STORAGE_PATH=${MACHINE_STORAGE_PATH:-/ops/machine}

source_docker_env() {
  export ERROR=""
  eval $(__docker_env.sh)
  if [[ "$ERROR" != "" ]]; then
    echo
    echo "$ERROR"
    echo
  fi
}

ascii_welcome() {
  QUIET=${QUIET:-"no"}
  [[ "$QUIET" == "no" ]] && \
  echo '      _
   __| | ___  _ __  ___
  / _` |/ _ \| |_ \/ __|
 | (Â°| < (#) < |_) \__ \
  \__,_|\___/| .__/|___/
             |_|
 -----------------------
 Yo!'
}

main() {

  local arg="${@:-"zsh"}"

  case "$arg" in
    gotty)
        sed -i \
          -e "s|password|${GOTTY_PASSWORD:-"password"}|" \
            /root/.gotty
        exec gotty zsh
      ;;
    zsh)
      ascii_welcome
      source_docker_env
      exec zsh
      ;;
    *)
      source_docker_env
      exec "$@"
    ;;
  esac
}

main "$@"